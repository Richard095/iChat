<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_main_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >


        <!--linearLayoutMessageContentId type-Text=layout_width:wrap_content -->
        <!--linearLayoutMessageContentId type-IMAGE=layout_width:match_parent -->
        <LinearLayout
            android:id="@+id/linearLayoutMessageContentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:background="@drawable/message_text_by_friend_bg">



            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textColor="#fff"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                />

            <ImageView
                android:id="@+id/iv_imageMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/asset_paisaje"
                android:adjustViewBounds="true"
                android:visibility="gone"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:id="@+id/tv_createdAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:45 am"
                    android:textColor="#f2f2f2"
                    android:textSize="10sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:autoLink="all"/>



            </LinearLayout>




        </LinearLayout>



    </LinearLayout>


</LinearLayout>