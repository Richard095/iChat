<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/invitation_box_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/tv_username_invitation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ricardo Ramirez"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="#000"
            android:singleLine="false"
            android:padding="2dp"/>



        <Button
            android:id="@+id/button_accept_invitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Aceptar"
            android:background="@drawable/invitation_button_bg"
            android:textStyle="normal"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/iv_delete_invitation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:adjustViewBounds="false"/>

    </LinearLayout>

</LinearLayout>